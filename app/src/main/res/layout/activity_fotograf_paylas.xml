<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FotografPaylasActivity">

    <Button
        android:id="@+id/paylasBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="146dp"
        android:onClick="paylas"
        android:text="PAYLAŞ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/aciklamaEditText"
        app:layout_constraintTop_toBottomOf="@+id/aciklamaEditText" />

    <EditText
        android:id="@+id/aciklamaEditText"
        android:layout_width="316dp"
        android:layout_height="59dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="90dp"
        android:ems="10"
        android:hint="Bir şeyler yazın."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/paylasBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FotografView" />

    <ImageView
        android:id="@+id/FotografView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="53dp"
        android:contentDescription="secilenFotograf"
        android:onClick="gorselSec"
        app:layout_constraintBottom_toTopOf="@+id/aciklamaEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

</androidx.constraintlayout.widget.ConstraintLayout>